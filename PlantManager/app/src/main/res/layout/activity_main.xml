<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".layouts.MainActivity">

    <Button
        android:id="@+id/MyPlantsButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="159dp"
        android:layout_marginTop="253dp"
        android:layout_marginEnd="164dp"
        android:layout_marginBottom="80dp"
        android:background="#4CAF50"
        android:ellipsize="none"
        android:fontFamily="cursive"
        android:text="My Garden"
        android:textScaleX="1.5"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/PlantDatabaseButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/PlantDatabaseButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="163dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="221dp"
        android:background="#4CAF50"
        android:fontFamily="cursive"
        android:shadowColor="#313A31"
        android:text="Search Plant Database"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MyPlantsButton" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="1329dp"
        android:layout_height="731dp"
        android:background="#004CAF50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@mipmap/ic_mainpage_bg" />
</androidx.constraintlayout.widget.ConstraintLayout>